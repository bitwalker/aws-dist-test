#!/usr/bin/env bash

set -e
set -x

cd /opt/app || exit 1

APP="$1"

# Extract release
tar -xzf "${APP}".tar.gz
# Clean up archive
rm "${APP}".tar.gz
# Set permissions
chown -R ec2-user:ec2-user /opt/app

# Set up systemd service if not already done
__cwd="$(pwd)"
if [ ! -L /lib/systemd/system/"${APP}".service ]; then
    pushd /lib/systemd/system
    ln -s "${__cwd}/etc/${APP}.service" "${APP}".service
    popd
fi

exit 0
